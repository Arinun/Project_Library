@model IEnumerable<Project_Library.Models.Library>

@{
    ViewData["Title"] = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    div.a {
        text-align: center;
        background-color: pink;
    }
</style>

<body id="page-top">
    <center>
        <img src="https://scontent.fnak2-1.fna.fbcdn.net/v/t1.15752-9/312370885_501080455292818_4171147821950675704_n.jpg?_nc_cat=105&ccb=1-7&_nc_sid=ae9488&_nc_ohc=OdeVt8PCJyAAX8dRWBG&_nc_ht=scontent.fnak2-1.fna&oh=03_AdRE42P4wcMSh1pVf4foZGTs6hGjgx080DZAdJ_fk0ao6w&oe=639B4D87"
    </center>
    
    <!-- Page Wrapper -->
    <div >
        <div class="container-fluid">
            <!-- Page Heading -->
            <form asp-action="SearchResult" class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search">
                <div asp-validation-summary="ModelOnly"></div>
                <label for="Name" class="control-label"></label>
                <div class="input-group">
                    <input name="SearchText" class="form-control bg-light border-0 small" placeholder="Search for name..."
                           aria-label="Search" aria-describedby="basic-addon2">
                    <div class="input-group-append">
                        <button class="btn btn-primary" type="button">
                            <input type="submit" value="Search" class="btn btn-primary" />
                        </button>
                        <h1> </h1>
                        <h1> </h1>
                    </div>
                </div>
            </form>
            <div class="a">
                <h1>การค้นหา</h1>
                <h1> </h1>
            </div>
            <!-- Content Row -->
            <div class="form-control">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.IdPerson)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PersonName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.BookID)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.BookName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DateBorrow)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DateReturn)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IdPerson)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PersonName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BookID)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BookName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DateBorrow)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DateReturn)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div>
                    <a asp-action="Index" class="btn btn-primary">Back to List</a>
                </div>
    </div>
</body>

